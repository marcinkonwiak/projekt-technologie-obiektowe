#db-tree-container {
    dock: left;
    width: 30;
}

#db-tree {
    margin: 0 1;
    margin-bottom: 1;
    border: round $panel;
    background: $background;
    background-tint: $background;
}

#db-tree:focus {
    border: round $primary;
}

#db-query-input {
    background: $background;
    height: 1fr;
    min-height: 3;
    border: round $panel;
}

#db-table-container {
    height: 10fr;
}

#db-table {
    height: 3fr;
    border: round $panel;
    background: $background;
    background-tint: $background;
    scrollbar-size: 1 1;
}

#db-table:focus {
    border: round $primary;
}

#db-table-options {
    height: 1fr;
    background: $background;
    background-tint: $background;
    scrollbar-size: 1 1;
}

#db-table-options SelectionList {
    height: 1fr;
    border: round $panel;
    background: $background;
    background-tint: $background;
}

#db-table-options SelectionList:focus {
    border: round $primary;
}
